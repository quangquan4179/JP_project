<p id="notice"><%= notice %></p>

<h1>Player Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Player</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_reviews.each do |player_review| %>
      <tr>
        <td><%= player_review.user_id %></td>
        <td><%= player_review.player_id %></td>
        <td><%= player_review.review %></td>
        <td><%= link_to 'Show', player_review %></td>
        <td><%= link_to 'Edit', edit_player_review_path(player_review) %></td>
        <td><%= link_to 'Destroy', player_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player Review', new_player_review_path %>
