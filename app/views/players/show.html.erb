<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @player.name %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @player.birthday %>
</p>

<p>
  <strong>Country:</strong>
  <%= @player.country %>
</p>

<p>
  <strong>Height:</strong>
  <%= @player.height %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @player.weight %>
</p>

<p>
  <strong>Club:</strong>
  <%= @player.club %>
</p>

<div>
    <h2>Transfer History</h2> 
    <%= link_to 'New Transfer', new_player_transfer_history_path(@player) %>
    <ul>
    <% @player.transfer_history.each do |transfer_history|%>
         <li><%= transfer_history.old_club %>,
         <%= transfer_history.new_club %>,
         <%= transfer_history.day %>,
         <%= transfer_history.note %>
         </li>
    <% end %>
    </ul>
</div>


<h2>Review Form</h2>
<%= form_with(model: @player_review, local: true) do |form| %>
  <div class= "field">
    <%= form.text_area :review %>
    <%= form.hidden_field :player_id, :value => @player.id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<h2>Review List</h2>
<ul>
  <% @player.player_review.each do |player_review|%>
   <li><%= player_review.review %>
     (<i><%= player_review.user.id %></i>)</li>
<% end %>
</ul>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
