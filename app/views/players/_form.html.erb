  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday,class:"input-data-form" %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country,class:"input-data-form"  %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.text_field :height,class:"input-data-form"  %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight,class:"input-data-form"  %>
  </div>

  <div class="field">
    <%= form.label :club %>
    <%= form.text_field :club,class:"input-data-form"  %>
  </div>
  
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %><br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
