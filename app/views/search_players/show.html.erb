<p id="notice"><%= notice %></p>

<% @results = @search_players.search %>
<% if @results.blank? %>

    <p> No record found </p>
    
<% else %>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Birthday</th>
          <th>Country</th>
          <th>Height</th>
          <th>Weight</th>
          <th>Club</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% if @results %>
            <% @results.each do |player| %>
              <tr>
                <td><%= player.name %></td>
                <td><%= player.birthday %></td>
                <td><%= player.country %></td>
                <td><%= player.height %></td>
                <td><%= player.weight %></td>
                <td><%= player.club %></td>
                <td><%= link_to 'Show', player %></td>
                <td><%= link_to 'Edit', edit_player_path(player) %></td>
                <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
        <% end %>
      </tbody>
    </table>
    
<% end %>

<%= link_to 'Back', new_search_player_path %>
